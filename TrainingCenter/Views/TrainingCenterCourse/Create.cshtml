@model TrainingCenterCourse
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>


<form asp-action="Create" method="post">


    <div>
        <label>Course Name:</label>
        <input asp-for="Course.CourseName" name="Course.CourseName" class="form-control" />
    </div>

    <div>
        <label> Lectures Name:</label>
        <input asp-for="Lectures.Name" name="Lectures.Name" class="form-control" />
    </div>

     <div>
        <label>Lectures Department:</label>
        <select asp-for="CourseId" name="CourseId" class="form-control" asp-items="@ViewBag.coursesdto" />


        <option selected disabled value="0">Select course</option>

        <span asp-validation-for="LectuerID" class="text-danger"></span>
        </div>



    <div>
        <label>Supervisor Name:</label>
        <input asp-for="Supervisor" name="Supervisor" class="form-control" />
    </div>

    <div>
        <label>Start Date:</label>
        <input asp-for="StartDate" name="StartDate" class="form-control" />
    </div>

    <div>
        <label>End Date:</label>
        <input asp-for="EndDate" name="StartDate" class="form-control" />
    </div>


    <hr>
    <button type="submit" class="btn btn-primary">Save</button>


</form>